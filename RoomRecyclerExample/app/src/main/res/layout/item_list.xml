<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_index"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:text="#1"
            android:hint="코스 순서"
            android:textSize="30sp"
            android:textStyle="italic"
            android:gravity="center"
            android:background="@color/thema_background_skin"/>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/item_thema"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="테마명"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:gravity="center" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <TextView
                android:id="@+id/item_spotName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:padding="5dp"
                android:text="관광지명(자치도 + 관광지명)"
                android:hint="자치도 + 관광지명"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:gravity="center"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/line"/>

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_temperature"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:padding="5dp"
                android:text="기온"
                android:hint="자치도 + 관광지명"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <TextView
                android:id="@+id/item_sky"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:padding="5dp"
                android:text="하늘 상태"
                android:hint="자치도 + 관광지명"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/line"/>

            <TextView
                android:id="@+id/item_pop"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:padding="5dp"
                android:text="강수 확률"
                android:hint="자치도 + 관광지명"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>